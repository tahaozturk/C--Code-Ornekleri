using System;

namespace Hangi_Ayda_Olduğunu_Söyleyen_Program
{
    class Program
    {
        static void Main(string[] args)
        {
            int ay = DateTime.Now.Month;

            switch (ay)
            {
                case 1:
                    Console.WriteLine("Ocak ayındasınız yani kış mevsimindesiniz.");
                    break;
                case 2:
                    Console.WriteLine("Şubat ayındasınız yani kış mevsimindesiniz.");
                    break;
                case 3:
                    Console.WriteLine("Mart ayındasınız yani bahar mevsimindesiniz.");
                    break;
                case 4:
                    Console.WriteLine("Nisan ayındasınız yani bahar mevsimindesiniz.");
                    break;
                case 5:
                    Console.WriteLine("Mayıs ayındasınız yani bahar mevsimindesiniz.");
                    break;
                case 6:
                    Console.WriteLine("Haziran ayındasınız yani yaz mevsimindesiniz.");
                    break;
                case 7:
                    Console.WriteLine("Temmuz ayındasınız yani yaz mevsimindesiniz.");
                    break;
                case 8:
                    Console.WriteLine("Ağustos ayındasınız yani yaz mevsimindesiniz.");
                    break;
                case 9:
                    Console.WriteLine("Eylül ayındasınız yanisonbahar mevsimindesiniz.");
                    break;
                case 10:
                    Console.WriteLine("Ekim ayındasınız yani sonbahar mevsimindesiniz.");
                    break;
                case 11:
                    Console.WriteLine("Kasım ayındasınız yani sonbahar mevsimindesiniz.");
                    break;
                case 12:
                    Console.WriteLine("Aralık ayındasınız yani kış mevsimindesiniz.");
                    break;

                default:
                    Console.WriteLine("Veri girişi yanlış.");
                    break;


            }

            
        }
    }
}
