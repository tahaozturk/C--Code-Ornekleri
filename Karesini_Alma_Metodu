using System;

namespace Karesini_Alma_Metodu
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Karesi alınacak sayıyı giriniz: ");
            int x = int.Parse(Console.ReadLine());
            Console.WriteLine("Sonuç = " + Kare(x));
        }

        static int Kare(int x)
        {
            return x * x;
        }
    }
}
